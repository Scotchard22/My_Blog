<%= form_for ([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :Name %><br />
    <%= f.text_field :name, :placeholder => "What is your name ?" %>
  </p>

  <p>
    <i class="material-icons prefix">mode_edit</i>
    <%= f.label :Comment %><br />
    <%= f.text_area :body, :placeholder => "Add comment here...", :class => 'materialize-textarea' %>
  </p>
  <br/>

  <button class="submit btn waves-effect waves-light" type="submit" name="action">Submit
  <i class="material-icons right">done</i>
  </button>

<% end %>  
